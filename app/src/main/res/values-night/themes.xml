<resources>
    <!-- Base application theme. -->
    <style name="Theme.GreenStash" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary_dark</item>
        <item name="colorPrimaryVariant">@color/color_primary_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/color_secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="iconPreferenceColor">@color/light_gray</item>
        <item name="fabAndButtonIconColor">@color/white</item>
        <item name="cardBackgroundColor">@color/dark_gray</item>
        <item name="fabBackgroundColor">@color/fab_bg_dark</item>
        <item name="switchStyle">@style/Widget.App.Switch</item>
        <item name="materialAlertDialogTheme">@style/AlertDialogTheme</item>
    </style>

    <!-- Toolbar options menu color. -->
    <style name="ToolbarPopupStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">?attr/colorOnPrimary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Switch color. -->
    <style name="Widget.App.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Switch</item>
    </style>

    <style name="ThemeOverlay.App.Switch" parent="">
        <item name="colorOnSurface">@color/dark_green</item>
        <item name="colorSecondary">@color/color_secondary</item>
    </style>

    <!-- alert dialog color. -->
    <style name="AlertDialogTheme" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/light_gray</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/light_gray</item>
    </style>


</resources>